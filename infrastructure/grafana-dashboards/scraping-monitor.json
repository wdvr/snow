{
  "dashboard": {
    "id": null,
    "uid": "snow-scraping-monitor",
    "title": "Snow Tracker - Scraping Monitor",
    "tags": ["snow-tracker", "scraping", "weather"],
    "timezone": "browser",
    "refresh": "5m",
    "schemaVersion": 38,
    "panels": [
      {
        "id": 1,
        "title": "Scraper Success Rate",
        "description": "Percentage of successful scraping operations",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "refId": "A",
            "namespace": "SnowTracker/Scraping",
            "metricName": "ScraperSuccessRate",
            "dimensions": { "Environment": ["staging", "prod"] },
            "statistic": "Average",
            "period": "300",
            "alias": "Success Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "orange", "value": 50 },
                { "color": "yellow", "value": 75 },
                { "color": "green", "value": 90 }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 2,
        "title": "Resorts Processed",
        "description": "Total number of resorts processed in the last hour",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "refId": "A",
            "namespace": "SnowTracker/Scraping",
            "metricName": "ResortsProcessed",
            "dimensions": { "Environment": ["staging", "prod"] },
            "statistic": "Sum",
            "period": "3600",
            "alias": "Resorts Processed"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": null },
                { "color": "green", "value": 1 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Processing Errors",
        "description": "Total errors in the last hour (absolute count)",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
        "targets": [
          {
            "refId": "A",
            "namespace": "SnowTracker/Scraping",
            "metricName": "ProcessingErrors",
            "dimensions": { "Environment": ["staging", "prod"] },
            "statistic": "Sum",
            "period": "3600",
            "alias": "Error Count"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Avg Processing Duration",
        "description": "Average time to process all resorts (seconds)",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
        "targets": [
          {
            "refId": "A",
            "namespace": "SnowTracker/Scraping",
            "metricName": "ProcessingDuration",
            "dimensions": { "Environment": ["staging", "prod"] },
            "statistic": "Average",
            "period": "300",
            "alias": "Avg Duration"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 60 },
                { "color": "red", "value": 120 }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Conditions Saved Over Time",
        "description": "Number of snow conditions saved to database per hour (absolute count)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 6, "y": 4 },
        "targets": [
          {
            "refId": "A",
            "namespace": "SnowTracker/Scraping",
            "metricName": "ConditionsSaved",
            "dimensions": { "Environment": ["staging", "prod"] },
            "statistic": "Sum",
            "period": "3600",
            "alias": "Conditions Saved"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            },
            "color": { "fixedColor": "green", "mode": "fixed" }
          }
        }
      },
      {
        "id": 6,
        "title": "Scraper Hits vs Misses",
        "description": "Hits = successful data fetch, Misses = failed or missing data (absolute counts)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
        "targets": [
          {
            "refId": "A",
            "namespace": "SnowTracker/Scraping",
            "metricName": "ScraperHits",
            "dimensions": { "Environment": ["staging", "prod"] },
            "statistic": "Sum",
            "period": "3600",
            "alias": "Successful Scrapes"
          },
          {
            "refId": "B",
            "namespace": "SnowTracker/Scraping",
            "metricName": "ScraperMisses",
            "dimensions": { "Environment": ["staging", "prod"] },
            "statistic": "Sum",
            "period": "3600",
            "alias": "Failed Scrapes"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80,
              "stacking": { "mode": "normal" }
            }
          },
          "overrides": [
            { "matcher": { "id": "byName", "options": "Successful Scrapes" }, "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }] },
            { "matcher": { "id": "byName", "options": "Failed Scrapes" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] }
          ]
        }
      },
      {
        "id": 7,
        "title": "Processing Errors Over Time",
        "description": "Error count per hour (absolute count)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
        "targets": [
          {
            "refId": "A",
            "namespace": "SnowTracker/Scraping",
            "metricName": "ProcessingErrors",
            "dimensions": { "Environment": ["staging", "prod"] },
            "statistic": "Sum",
            "period": "3600",
            "alias": "Errors"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            },
            "color": { "fixedColor": "red", "mode": "fixed" }
          }
        }
      },
      {
        "id": 8,
        "title": "Elevation Points Processed",
        "description": "Number of elevation data points processed (base/mid/top per resort)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
        "targets": [
          {
            "refId": "A",
            "namespace": "SnowTracker/Scraping",
            "metricName": "ElevationPointsProcessed",
            "dimensions": { "Environment": ["staging", "prod"] },
            "statistic": "Sum",
            "period": "3600",
            "alias": "Elevation Points"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            },
            "color": { "fixedColor": "purple", "mode": "fixed" }
          }
        }
      },
      {
        "id": 9,
        "title": "Weather Processor Lambda",
        "description": "Lambda invocations and errors for the weather processor function",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
        "targets": [
          {
            "refId": "A",
            "namespace": "AWS/Lambda",
            "metricName": "Invocations",
            "dimensions": { "FunctionName": "snow-tracker-weather-processor-staging" },
            "statistic": "Sum",
            "period": "3600",
            "alias": "Lambda Invocations"
          },
          {
            "refId": "B",
            "namespace": "AWS/Lambda",
            "metricName": "Errors",
            "dimensions": { "FunctionName": "snow-tracker-weather-processor-staging" },
            "statistic": "Sum",
            "period": "3600",
            "alias": "Lambda Errors"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2
            }
          },
          "overrides": [
            { "matcher": { "id": "byName", "options": "Lambda Invocations" }, "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }] },
            { "matcher": { "id": "byName", "options": "Lambda Errors" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] }
          ]
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    }
  },
  "overwrite": true
}
