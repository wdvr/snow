# Snow Quality Tracker - Environment Variables
# Copy this file to .env and fill in the values
# NEVER commit .env to git - it contains secrets

# ============================================
# AWS Configuration
# ============================================
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012

# ============================================
# DynamoDB Tables
# ============================================
RESORTS_TABLE=snow-tracker-resorts-dev
WEATHER_CONDITIONS_TABLE=snow-tracker-weather-conditions-dev
USER_PREFERENCES_TABLE=snow-tracker-user-preferences-dev

# ============================================
# Weather API
# ============================================
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_BASE_URL=https://api.weatherapi.com/v1

# ============================================
# Pulumi Configuration
# ============================================
PULUMI_CONFIG_PASSPHRASE=your-pulumi-passphrase
PULUMI_STACK=dev

# ============================================
# Application Configuration
# ============================================
APP_NAME=Snow Quality Tracker
ENVIRONMENT=dev
LOG_LEVEL=INFO
DEBUG_MODE=true

# ============================================
# Authentication (Apple Sign In)
# ============================================
JWT_SECRET_KEY=your-jwt-secret-key
APPLE_SIGNIN_KEY_ID=your-apple-signin-key-id
APPLE_SIGNIN_TEAM_ID=your-apple-team-id

# ============================================
# Local Development (Optional)
# ============================================
# For local DynamoDB testing with localstack
DYNAMODB_ENDPOINT=http://localhost:8000
LOCAL_DEVELOPMENT=true
MOCK_WEATHER_DATA=false

# ============================================
# Snow Quality Algorithm Parameters
# ============================================
ICE_FORMATION_TEMP_CELSIUS=3
ICE_FORMATION_DURATION_HOURS=4
FRESH_SNOW_VALIDITY_DAYS=7

# ============================================
# App Store Connect (for TestFlight automation)
# ============================================
APP_STORE_CONNECT_KEY_ID=GA9T4G84AU
APP_STORE_CONNECT_ISSUER_ID=your-issuer-id-from-app-store-connect
# Private key stored in ~/.private_keys/AuthKey_GA9T4G84AU.p8

# ============================================
# GitHub Secrets Required
# ============================================
# These should be configured in GitHub Settings > Secrets:
#
# AWS_ACCESS_KEY_ID                - AWS IAM access key for deployments
# AWS_SECRET_ACCESS_KEY            - AWS IAM secret key for deployments
# PULUMI_CONFIG_PASSPHRASE         - Passphrase for Pulumi secrets encryption
# WEATHER_API_KEY                  - Weather API key for data fetching
# APP_STORE_CONNECT_KEY_ID         - App Store Connect API Key ID
# APP_STORE_CONNECT_ISSUER_ID      - App Store Connect Issuer ID
# APP_STORE_CONNECT_PRIVATE_KEY    - App Store Connect Private Key (.p8 content)
